@using QDLogistics.Commons
<header id="header">
    <div id="logo-group">
        <span id="logo" style="@((bool)Session["IsLogin"] ? "margin: 5px; width: 180px;" : "")"><img src="~/content/img/QD.jpg" alt="QD - 出貨管理系統" style="width: auto; height: 40px; padding: 0;"></span>

        @if ((bool)Session["IsLogin"])
        {
            <span id="activity" class="activity-dropdown" style="margin: 10px 0;"> <i class="fa fa-tasks"></i> </span>
            <div class="ajax-dropdown">
                <!-- notification content -->
                <div class="ajax-notifications custom-scroll">
                    <ul class="notification-body" style="padding: 0 2px 0 2px;" id="list-task-working"></ul>
                </div>
                <!-- end notification content -->
                <!-- footer: refresh area -->
                <span>
                    Last updated on: <span id="date-task-update">12/12/2013 9:43AM</span>
                    <button type="button" id="btn-task-refresh" data-loading-text="<i class='fa fa-refresh fa-spin'></i> Loading..." class="btn btn-xs btn-default pull-right">
                        <i class="fa fa-refresh"></i>
                    </button>
                </span>
                <!-- end footer -->
            </div>
        }
    </div>
    <div class="hidden-xs" style="padding:0px 10px" id="text-hint">
        <h1><span class="text-danger"><strong></strong></span></h1>
    </div>
    @if ((bool)Session["IsLogin"])
    {
        <div class="pull-right">
            <div id="hide-menu" class="btn-header pull-right">
                <span> <a href="javascript:void(0);" title="Collapse Menu" data-action="toggleMenu"><i class="fa fa-reorder"></i></a> </span>
            </div>
            <ul id="mobile-profile-img" class="header-dropdown-list hidden-xs padding-5">
                <li class="">
                    <a href="#" class="dropdown-toggle no-margin userdropdown" data-toggle="dropdown" aria-expanded="false">
                        <img src="~/Content/img/avatars/male.png" alt="John Doe" class="online">
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="@Url.Action("logout", "main")" class="padding-10 padding-top-5 padding-bottom-5" data-action="userLogout" data-logout-msg="你確定離開?">
                                <i class="fa fa-sign-out fa-lg"></i> <strong>登出</strong>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div id="fullscreen" class="btn-header transparent pull-right">
                <span> <a href="javascript:void(0);" title="Full Screen" data-action="launchFullscreen"><i class="fa fa-arrows-alt"></i></a> </span>
            </div>
        </div>
    }
</header>